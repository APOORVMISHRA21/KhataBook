<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ProfitLossActivity">

    <ImageView
        android:id="@+id/go_to_home_button"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_home"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Profit/Loss"
        android:textSize="34sp"
        android:textStyle="bold"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Expense Name"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:lines="1"
            android:minLines="1"
            android:singleLine="false"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:text="Value(₹)"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Description"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="15sp" />



    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/profitLossRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="246dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="5dp" />

    <TextView
        android:id="@+id/finalIncome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="bottom|end"
        android:text="Product net sale value:(₹): "
        android:textSize="15sp"
        android:textColor="@color/black" />


    <TextView
        android:id="@+id/manfCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:text="Product net manufacturing cost:(₹): "
        android:textColor="@color/black"
        android:textSize="15sp"
         />

    <TextView
        android:id="@+id/payrollAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:text="Amount payed to Employee(₹): "
        android:textColor="@color/black"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/expenseAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:text="Total Expenses(₹): "
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/netFinalIncome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="bottom|end"
        android:text="Net Income : "
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/finalOutcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="center"
        android:text="Profit or Loss"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/red" />









</LinearLayout>